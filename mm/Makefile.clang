# C++ compiler
CXX = clang++
CFLAGS = -Wall -O3 -fopenmp
OFFLOAD_FLAGS = -fopenmp-targets=nvptx64 -Xopenmp-target -march=sm_70

mm: mm.cpp
	for (( N1=1000; N1<=10000; N1+=1000 )); do \
  for (( N2=1000; N2<=10000; N2+=1000 )); do \
	for (( N3=1000; N3<=10000; N3+=1000 )); do \
		$(CXX) $(CFLAGS) $(OFFLOAD_FLAGS) mm.cpp -DN1=$${N1} -DN2=$${N2} -DN3=$${N3} -o mm_$${N1}_$${N2}_$${N3}_clang_summit.out; \
		$(CXX) $(CFLAGS) $(OFFLOAD_FLAGS) mm.cpp -DMEMCPY -DN1=$${N1} -DN2=$${N2} -DN3=$${N3} -o mm_memcpy_$${N1}_$${N2}_$${N3}_clang_summit.out; \
	done;done;done

clean:
	$(RM) *.out
