# C++ compiler
CXX = clang++
CFLAGS = -Wall -O3 -fopenmp
OFFLOAD_FLAGS = -fopenmp-targets=nvptx64 -Xopenmp-target -march=sm_70

all: gauss.cpp kernel_cpu_collapse.cpp kernel_cpu.cpp kernel_gpu_collapse.cpp kernel_gpu_collapse_mem.cpp kernel_gpu.cpp kernel_gpu_mem.cpp
	for (( N=32; N<9500; N+=32 )); do \
	if [ ! -f gauss_$${N}_v100.out ]; then \
		$(CXX) $(CFLAGS) $(OFFLOAD_FLAGS) -DN=$${N} -c gauss.cpp -o gauss_$${N}_v100.o; \
		$(CXX) $(CFLAGS) $(OFFLOAD_FLAGS) -DN=$${N} -c kernel_cpu.cpp -o kernel_cpu_$${N}_v100.o; \
		$(CXX) $(CFLAGS) $(OFFLOAD_FLAGS) -DN=$${N} -c kernel_cpu_collapse.cpp -o kernel_cpu_collapse_$${N}_v100.o; \
		$(CXX) $(CFLAGS) $(OFFLOAD_FLAGS) -DN=$${N} -c kernel_gpu.cpp -o kernel_gpu_$${N}_v100.o; \
		$(CXX) $(CFLAGS) $(OFFLOAD_FLAGS) -DN=$${N} -c kernel_gpu_collapse.cpp -o kernel_gpu_collapse_$${N}_v100.o; \
		$(CXX) $(CFLAGS) $(OFFLOAD_FLAGS) -DN=$${N} -c kernel_gpu_mem.cpp -o kernel_gpu_mem_$${N}_v100.o; \
		$(CXX) $(CFLAGS) $(OFFLOAD_FLAGS) -DN=$${N} -c kernel_gpu_collapse_mem.cpp -o kernel_gpu_collapse_mem_$${N}_v100.o; \
		$(CXX) $(CFLAGS) $(OFFLOAD_FLAGS) kernel_cpu_$${N}_v100.o kernel_cpu_collapse_$${N}_v100.o kernel_gpu_$${N}_v100.o kernel_gpu_collapse_$${N}_v100.o kernel_gpu_mem_$${N}_v100.o kernel_gpu_collapse_mem_$${N}_v100.o gauss_$${N}_v100.o -o gauss_$${N}_v100.out; \
		$(RM) kernel_cpu_$${N}_v100.o kernel_cpu_collapse_$${N}_v100.o kernel_gpu_$${N}_v100.o kernel_gpu_collapse_$${N}_v100.o kernel_gpu_mem_$${N}_v100.o kernel_gpu_collapse_mem_$${N}_v100.o gauss_$${N}_v100.o; \
	fi; \
	done

clean:
	$(RM) gs_offload_noreuse gs_offload gs_offload_noreuse6 gs_offload6 gs_offload_noreuse7 gs_offload7

